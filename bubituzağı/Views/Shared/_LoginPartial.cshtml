@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
      
                <a asp-area="" asp-controller="Users" asp-action="Create" class="nav-link text-dark">Sisteme Kaydol</a>

        </li>

        <div style="display:flex;text-align:center;">
            
        <li class="nav-item">
            <a asp-area="" asp-controller="Users" asp-action="Login"><img src="https://cdn-icons-png.flaticon.com/512/154/154345.png" height="25px" />Giriş eyle</a>
        </li>
        </div>

    }
</ul>
